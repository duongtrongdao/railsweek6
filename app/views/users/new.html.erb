<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :name, :class=>"cols-sm-2 control-label" %>
      <div class="cols-sm-10">
        <div class="input-group">

          <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
          <%= f.text_field :name, :class=>"form-control" %>
        </div>
      </div>
    </div>
     <div class="form-group">
    <%= f.label :sex, :class=>"cols-sm-2 control-label" %>
    <div class="cols-sm-10">
      <div class="input-group">
        <span class="input-group-addon x"><i class="fa fa-user fa" aria-hidden="true"></i></span>
        <div class="ds">
       <%= f.select :sex, User.sexes.keys %>
       </div>
     </div>
   </div>
 </div>
    <div class="form-group">
    <%= f.label :birthday, :class=>"cols-sm-2 control-label" %>
    <div class="cols-sm-10">
      <div class="input-group">
        <span class="input-group-addon x"><i class="fa fa-user fa" aria-hidden="true"></i></span>
    <div class="datetime">
    <%= f.date_select :birthday,
    {:order => [:day, :month, :year], :start_year =>Date.today.year - 80 , :end_year => Date.today.year - 10} %></div>
     </div>
   </div>
 </div>
    <div class="form-group">
      <%= f.label :email, :class=>"cols-sm-2 control-label" %>
      <div class="cols-sm-10">
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
          <%= f.email_field :email, :class=>"form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class=>"cols-sm-2 control-label" %>
      <div class="cols-sm-10">
        <div class="input-group">
         <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
         <%= f.password_field :password, :class=>"form-control" %>
       </div>
     </div>
   </div>
   
    <div class="form-group">
    <%= f.label :password_confirmation, :class=>"cols-sm-2 control-label" %>
    <div class="cols-sm-10">
      <div class="input-group">
       <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
       <%= f.password_field :password_confirmation, :class=>"form-control" %>
     </div>
   </div>
 </div>

 <%= f.submit "Create my account", class: "btn btn-primary" %>
 <% end %>
</div>
</div>
